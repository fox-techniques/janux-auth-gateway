# ========================
# üåç Environment Settings
# ========================
ENVIRONMENT=local
CONTAINER=True
ALLOWED_ORIGINS="*"

# ========================
# üîê Authentication (JWT)
# ========================
# Paths to private/public keys (used for RS256 JWT signing)
AUTH_PRIVATE_KEY_PATH=keys/private.pem
AUTH_PUBLIC_KEY_PATH=keys/public.pem

# Token Algorithm (Ensure it's RS256 for asymmetric signing)
AUTH_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=20

# ========================
# üìç Token Endpoints
# ========================
USER_TOKEN_URL=/auth/login
ADMIN_TOKEN_URL=/auth/login

# ========================
# üóÑÔ∏è Database Configuration
# ========================
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE_NAME=users_db
MONGO_SUPER_ADMIN_EMAIL=super.admin@example.com
MONGO_SUPER_ADMIN_PASSWORD=super_secure_password123!

# Optional Tester Account for Development
MONGO_TESTER_EMAIL=tester@example.com
MONGO_TESTER_PASSWORD=tester_password_secure!
